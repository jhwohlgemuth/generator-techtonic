{
    "grunt": {
        "folders": {
            "config":   "config",
            "client":   "client",
            "dist":     "dist",
            "app":      "<%= sourceDirectory %>",
            "assets":   "",
            "tasks":    "./tasks",
            "test":     "./test",
            "reports":  "./reports",
            "specs":    "mocha/specs",
            "coverage": "coverage",
            "docs":     "docs"
        },
        "files": {
            "config": {
                "eslint":  "./config/.eslintrc.js",
                "karma":   "./config/karma.conf.js",
                "webpack": "./config/webpack.config.js"
            },
            "index":        "index.html",
            "scripts":      "**/*.js",
            "fonts":        "**/*.{ttf,woff,eot,svg}",
            "images":       "**/*.{png,jpg,gif,svg}",
            "mainScript":   "main.js",
            "configScript": "config.js",
            "models":       "models/**/*.js",
            "views":        "views/**/*.js",
            "controllers":  "controllers/**/*.js",
            "templates":    "templates/**/*.hbs"
        }
    }
}
